# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Signup
GET     /signup                     controllers.SignUp.blank()
#GET     /users/fakeuser            controllers.SignUp.edit()
POST    /signup                     controllers.SignUp.submit()

#Signin
GET 	/signin						controllers.SignIn.blank()
POST    /signin                      controllers.SignIn.authenticate()	
#GET     /logout                     controllers.Application.logout()
GET		/listuser					controllers.Application.listuser()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
